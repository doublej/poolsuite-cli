{
  "name": "poolsuite-cli",
  "version": "2.0.0",
  "description": "Ultra-summer internet radio from your terminal - Poolsuite FM CLI player",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "poolsuite": "./src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "typecheck": "bun run tsc --noEmit",
    "build": "bun build src/index.ts --compile --outfile=poolsuite",
    "format": "bunx prettier --write 'src/**/*.ts'",
    "lint": "bunx tsc --noEmit"
  },
  "keywords": [
    "poolsuite",
    "music",
    "radio",
    "soundcloud",
    "cli",
    "terminal",
    "summer"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/blessed": "^0.1.27",
    "blessed": "^0.1.81",
    "puppeteer": "^24.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
